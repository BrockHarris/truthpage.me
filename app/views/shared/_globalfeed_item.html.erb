<tr>
  <td class="gravatar">

    <%= render_user_avatar(globalfeed_item.user, :thumb) %>

  </td>
  <td class="micropost">
    <span class="user">
      <%= link_to globalfeed_item.user.username, globalfeed_item.user %>
    </span>
    <span class="content"><%= globalfeed_item.content %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(globalfeed_item.created_at) %> ago.
    </span>
  </td>
</tr>