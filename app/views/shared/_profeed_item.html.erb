<tr>
  <td class="gravatar">
    <%= link_to gravatar_for(profeed_item.user), profeed_item.user %>
  </td>
  <td class="micropost">
    <span class="user">
      <%= link_to profeed_item.user.username, profeed_item.user %>
    </span>
    <span class="content"><%= profeed_item.content %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(profeed_item.created_at) %> ago.
    </span>
  </td>
</tr>