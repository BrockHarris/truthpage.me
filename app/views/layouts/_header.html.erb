<script type="text/javascript">
  $(function(){
    $('#flash').delay(2000).fadeIn('normal', function() {
      $(this).delay(2000).fadeOut();
   });

    $("#signin").fancybox({
      'transitionIn'    :    'elastic',
      'transitionOut'    :    'elastic',
      'speedIn'        :    400,
      'speedOut'        :    200,
      'overlayShow'    :    true
    });

    $("#signup").fancybox({
      'transitionIn'    :    'elastic',
      'transitionOut'    :    'elastic',
      'speedIn'        :    400,
      'speedOut'        :    200,
      'overlayShow'    :    true
    });
  });
</script> 

<div class="header_bar">
<ul class="header_text">
  <li>
    <%= link_to "truthpage.me", root_path %>
  </li>
</ul>

  <nav class="round">
    <ul class="header_nav">
      <div class="headerlink_place">
        <% if current_user %>
          <li><%= link_to "Friends", root_url, :class =>"header_links" %></li> 路
          <li><%= link_to "Profile", "#{ root_url }#{ current_user.username }" , :class =>"header_links" %></li> 路
          <li><%= link_to "Settings", edit_user_path(current_user), :class =>"header_links" %></li> 路
        <% end %>
        
        <% if current_user %> 
          <li><%= link_to "Sign out", signout_path, :class =>"header_links", :method => :delete %></li>
        <% else %>
          <li><%= link_to "Home", root_path, :class =>"header_links" %></li> 路 
		      <li><%= link_to "Sign up", newlogin_path, :id =>"signup", :class =>"header_links" %></li>
        <% end %>
      </div>
    </ul>
  </nav>
  <% if current_user %> 
    <% if notifications.empty? %>
      <div class="welcome_user">
        <%= link_to "#{ current_user.username }", "#{ root_url }#{ current_user.username }", :style=>'color:#EEEEEE;' %>
      </div>
    <% else %>
      <div class="notification_container">
        <div class="notification_bubble">
          <%= image_tag "button.png", :class => "menu_class" %>
          <div class="notification_counter">
          <%= notifications.count %>
          </div>
          <div class="notifications_user">
          <%= link_to "#{ current_user.username }", "#{ root_url }#{ current_user.username }", :style=>'color:#EEEEEE;' %>
          </div>
        </div>
        <ul class="the_menu">
          <div class="menu_header">
            Notifications (<%= notifications.count %>)
          </div>
          <li>
            <%= render notifications %>
          </li>
        </ul>  
      </div>
    <% end %>
  <% end %>
  <% flash.each do |key, value| %>
          <div id="flash" class="<%= key %>"><%= value %></div>
        <% end %>
</div>

