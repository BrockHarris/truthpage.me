
 <script type="text/javascript">
  $(function(){
    $("#signin").fancybox({
      'transitionIn'    :    'elastic',
      'transitionOut'    :    'elastic',
      'speedIn'        :    400,
      'speedOut'        :    200,
      'overlayShow'    :    true
    });
  });
	</script>	


<div class="header_bar">
<ul class="header_text">
  <li>
    <%= link_to "truthpage.me", root_path %>
  </li>
</ul>
  <nav class="round">
    <ul class="header_nav">
      <div class="headerlink_place">
        <% if current_user %>
          <li><%= link_to "Friends", root_url, :class =>"header_links" %></li> ·
          <li><%= link_to "Profile", current_user, :class =>"header_links" %></li> ·
          <li><%= link_to "Settings", edit_user_path(current_user), :class =>"header_links" %></li> ·
        <% end %>
        
        <% if current_user %> 
          <li><%= link_to "Sign out", signout_path, :class =>"header_links", :method => :delete %></li>
        <% else %>
          <li><%= link_to "Home", root_path, :class =>"header_links" %></li> · 
          <li><%= link_to "Sign in", login_path, :id =>"signin", :class =>"header_links" %></li> · 
		      <li><%= link_to "Sign up", signup_path, :class =>"header_links" %></li>
        <% end %>
      </div>
    </ul>
  </nav>
  <% if current_user %> 
    <% if notifications.empty? %>
      <div class="welcome_user">
        <%= current_user.username %>
      </div>
    <% else %>
      <div class="notification_container">
        <div class="notification_bubble">
          <%= image_tag "button.png", :class => "menu_class" %>
          <div class="notification_counter">
          <%= notifications.count %>
          </div>
          <div class="notifications_user">
          <%= current_user.username %>
          </div>
        </div>
        <ul class="the_menu">
          <div class="menu_header">
            Notifications (<%= notifications.count %>)
          </div>
          <li>
            <%= render notifications %>
          </li>
        </ul>  
      </div>
    <% end %>
  <% end %>
</div>

