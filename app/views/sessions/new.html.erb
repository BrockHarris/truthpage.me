<strong>Sign in with Facebook:</strong>
<div class="gspacer"></div>
<%= render :partial=>"authentications/services" %>
<div style="clear:both"></div>
<p>
  <strong>Don&rsquo;t use Facebook?</strong>
  <%= link_to "Create a truthpage.me account", signup_path %> or login below.
</p>
  
<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :login, "Username or Email" %><br />
    <%= text_field_tag :login, params[:login], :class => "formfield" %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password, "", :class => "formfield" %>
  </div>
<%= link_to "Forgot your Password?", assist_url, :id=>"forgot-password", :class =>"forgot_password" %> 
<div class="actions"><%= submit_tag "", :class=>'signin_button' %></div>
  
<% end %>