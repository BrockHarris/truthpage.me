<tr>
  <td class="notification">
		<% if notification.try(:read?) %>
		<% else%>
		 	<div class="notification_type"> 
		 		<% if notification.try(:noname?)%>
		 			<%= link_to "Someone", current_user.username %> 
                    <%= notification.format %> 
                    <%= link_to "view", current_user, :style=>"font-size:10pt; color:#777;"  %>
		 		<% else %>
    			<%= link_to notification.sender.username, notification.sender.username %> 
                <%= notification.format %>
                <%= link_to "view", current_user, :style=>"font-size:10pt; color:#777;" %>
    		<% end %>
    	</div>
    	<% unless notification.micropost_content.blank? %>
    		<div class="notification_post_content">
    			"truth is <%=h truncate(notification.micropost_content, :length => 45) %>"
    		</div>
    	<% end %>
    	<div class="notification_time">
				<%= time_ago_in_words(notification.created_at) %> ago.
			</div>
		<% end %>
  		<%= button_to "", { :controller => 'notifications', :action => "destroy", :id => notification.id }, :method => :delete, :class => "notification_delete" %>
	</td>
</tr>