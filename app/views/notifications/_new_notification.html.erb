
<%= form_for @notification do |f| %>
  
  <%= render 'shared/error_messages', :object => f.object %>
 
	  <%= f.hidden_field :receiver, :value => @user.id %>
    <%= f.hidden_field :sender, :value => current_user.id %>
    <%= f.hidden_field :type, :value => "request" %>
	
  <div class ="share_placement">
  	<%= f.submit 'request a truth'%>
  </div>
<% end %>

