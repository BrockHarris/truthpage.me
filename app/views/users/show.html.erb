<%= content_for :head do %>
<script type="text/javascript">
  $(function(){
    $('#counter').jqEasyCounter({
		'maxChars': 180,
	    'maxCharsWarning': 165,
	    'msgFontSize': '15px',
	    'msgFontColor': 'white',
	    'msgFontFamily': 'helvetica',
	    'msgTextAlign': 'right',
	    'msgWarningColor': 'red',
	    'msgAppendMethod': 'insertAfter'
      });
  });
</script>

<% end %>


<div class="name_container">
	<div class="profile_name"> <%= @user.username %> </div>
	<div class="profile_avatar">	
	<%= render_user_avatar(@user, :small) %>	
	</div>
	<div class="post_counter">	
	<strong>Truths shared:</strong> <%= @user.microposts.count %> <br/>
	</div>
	<div class="profile_blurb"><%= @user.blurb %></div>
	
	
	
	
	
</div>
<% if current_user %>
<div class="profile_follow"><%= render_follow_links(@user) %></div>
<% end %>



<%= image_tag "truth-is.png", :class => "truth-is" %>

<div class="truthform_place">
<%= render 'microposts/form' %>
</div>
<strong>Following (<%= @user.following.count %>):</strong>
 <% unless @following.empty? %>
    <% @following.each do |user| %>
	      <%= render_user_avatar(user, :thumb) %>
    <% end %>
  <% end %>

<strong>followers (<%= @user.followers.count %>):</strong> 
<% unless @followers.empty? %>
    <% @followers.each do |user| %>
	      <%= render_user_avatar(user, :thumb) %>
    <% end %>
  <% end %>

<table class="microposts" summary="User microposts">
	<%= render @microposts  %>
</table>
<%= will_paginate @microposts %>