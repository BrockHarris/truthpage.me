
<% if current_user.photo.exists?%>
	<%= image_tag current_user.photo.url(:small) %>
<% else %>
	<%= image_tag "genericpic.jpg" %>
<% end %>

<h1>Profile settings</h1>

<%= form_for @user, :html=> { :multipart => true} do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>

  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmation" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
	<%= f.file_field :photo %>
	<br />

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

