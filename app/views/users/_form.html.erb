
<%= form_for @user, :html=> { :multipart => true} do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="settings_fields">
    <%= f.label "username" %><br />
    <%= f.text_field :username, :class =>"formfield" %>

  </div>
  <div class="settings_fields">
    <%= f.label :email %><br />
    <%= f.text_field :email, :class =>"formfield" %>
  </div>
   
 
<% if current_user %>

  <div class="settings_fields">
	<%= f.label "change profile picture" %><br />
	<%= f.file_field :photo %>
  </div>
  <div class="save_button">
    <%= f.submit '', :class => "savesettings"%>
  </div>

 <% else %>
  
  <div class="settings_fields">
    <%= f.label :password %><br />
    <%= f.password_field :password, :class =>"formfield" %>
  </div>
  <div class="settings_fields">
    <%= f.label :password_confirmation, "Confirm Password" %><br />
    <%= f.password_field :password_confirmation, :class =>"formfield" %>
  </div>
  <div class="captcha_holder">
	<%= show_simple_captcha :image_style => 'simply_blue', :label => "(type the words in the image)" %>
  </div>
  <div class="save_button">
    <%= f.submit '', :class => "signup_button"%>
  </div>
<div class="signup_condition">by clicking sign up you agree to our <%= link_to "terms of use", terms_path, :class => "footer_links" %>.</div>
<% end %>
<% end %>

