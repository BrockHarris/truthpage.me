
<%= form_for @user, :html=> { :multipart => true} do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  
  <div class="settings_fields">
    <div class="formlabel"> Username </div>
    <%= f.text_field :username, :class =>"formfield" %>
  </div>
  <div class="settings_fields">
    <div class="formlabel"> Email </div>
    <%= f.text_field :email, :class =>"formfield" %>
  </div>
   
 
<% if current_user %>

  <div class="settings_fields">
	  <div class="formlabel"> Change Avatar </div>
	  <%= f.file_field :photo, :class =>"formfield" %>
   </div>
 <div class="settings_fields" >
    <div class="formlabel"> Edit Blurb </div>
	 <%= f.text_area :blurb, :maxlength=>"180", :class=>"settings_blurb" %>
  </div>
  <div class="save_button">
    <%= f.submit '', :class => "savesettings"%>
  </div>

 <% else %>
  
  <div class="settings_fields">
    <div class="formlabel"> Password </div>
    <%= f.password_field :password, :class =>"formfield" %>
  </div>
  <div class="settings_fields">
    <div class="formlabel"> Confirm Password </div>
    <%= f.password_field :password_confirmation, :class =>"formfield" %>
  </div>
  <div class="captcha_holder">
	<%= show_simple_captcha :image_style => 'simply_blue', :label => "(type the words in the image)" %>
  </div>
  <div class="save_button">
    <%= f.submit '', :class => "signup_button"%>
  </div>
  <div class="signup_condition">by clicking sign up you agree to our 
    <%= link_to "terms of use", terms_path, :class => "footer_links" %>.
  </div>
  <% end %>
<% end %>

<% if current_user %>

<%= form_for @user, :html=> { :multipart => true} do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
 
  <div class="settings_fields">
    <div class="formlabel"> New Password </div>
    <%= f.password_field :password, :class =>"formfield" %>
  </div>
  <div class="settings_fields">
    <div class="formlabel"> New Password Confirmation </div>
    <%= f.password_field :password_confirmation, :class =>"formfield" %>
  </div>
  <div class="save_button">
    <%= f.submit '', :class => "savesettings"%>
  </div>
 <% end %>
<% end %>