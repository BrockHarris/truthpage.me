<div class="share_url_ribbon">
	<div class="share_url">
<strong>Profile link:</strong> http://truthpage.me/.<%= current_user.username %>
	</div>
</div>

<div class="profile_name">
	<%= current_user.username %>
</div>
<div class="profile_email">
	(<%= current_user.email %>)
</div>

<table class="profile" summary="Profile information">
	<tr>
		<td class="main">
			
			<% if @microposts.empty? %>
			Nobody has left you any truths yet!
			<% else%>
			<table class="microposts" summary="User microposts">
				<%= render @microposts  %>
			</table>
			<% end %>
		</td>
		<td class="sidebar round">
			<div class="profile_gravatar">	
				<%= render_user_avatar(current_user, :small) %>
			</div>  
			
			<%= render 'shared/stats' %>
			<strong>Truths shared:</strong> <%= current_user.microposts.count %>
		</td>
	</tr>
</table>
<%= will_paginate @microposts %>