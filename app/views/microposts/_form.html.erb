
<%= form_for @micropost do |f| %>
  
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field" >
		<%= f.text_area :content, :maxlength=>"180", :id =>"counter" %>
  </div>
  <div class="field">
		<%= f.hidden_field :belongs_to_id, :value => @user.id %>
  </div>
	<div class="anon_button">
		<%= f.check_box :anon, {}, true, false %>
		<%= f.label "share anonymously" %>
	</div>
  <% if current_user %>
  <% fields_for @notification do |fa| %>
    <%= fa.hidden_field :receiver, :value => @user.username %>
    <%= fa.hidden_field :sender, :value => current_user.username %>
    <%= fa.hidden_field :format, :value => "posted a truth about you" %>   
  <% end %>
  <% end %>
  <div class ="share_placement">
  	<% if current_user %>
  		<%= f.submit '', :class => 'submitpost'%>
  	<% else %>
  		<%= link_to '', login_path, :id => 'authenticate', :class => 'submitpost' %>
  	<% end %>
  </div>
<% end %>

