<%= form_for @micropost do |f| %>

  <%= render 'shared/error_messages', :object => f.object %>
 
  <div class="field" >
	<%= f.text_area :content, :maxlength=>"180", :id =>"counter" %>
  </div>
  <div class="field">
	<%= f.hidden_field :belongs_to_id, :value => @user.id %>
  </div>

<%= check_box_tag :anon, 'yes', true %>
<%= f.label "anonymous" %>
<div class ="share_placement"><%= f.submit '', :class => 'submitpost'%></div>

<% end %>

