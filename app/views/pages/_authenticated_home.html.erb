<div id="fb-root"></div>
<script src="http://connect.facebook.net/en_US/all.js"></script>
<script type="text/javascript">
 var pageCount = 1;
	$(function(){
		$(".post_comments").hide();
    	$(".open_comments").click(function(e){
      	$(this).next(".post_comments").slideToggle(300);
      	e.preventDefault();
    });

    $('#pages_loading').hide();
    	$("#load-more").click(function(e){
    	$('#pages_loading').show();
      $.get(this.href, {page:pageCount+=1}, function(data) {
        var rows = $(data).find("#posts_table tr");
          $('#posts_table').append(rows);
          $(".post_comments").hide();
          $('#pages_loading').hide();
        });
      e.preventDefault();
    }); 

		$("#share_profile").click(function() {
		FB.init({ 
		  appId:'186414394781001', 
		  channelUrl : '//truthpage.me/channel.html', // Channel File
			status     : true, // check login status
			cookie     : true, // enable cookies to allow the server to access the session
			xfbml      : true  // parse XFBML
		});
		FB.ui( {
			method: 'feed',
			message: 'message here',
			name: 'truth is? truthpage.me/<%= current_user.username %>',
			caption: 'Post a truth about me on truthpage.me',
			link: '<%= root_url%><%= current_user.username %>',
			picture: '<%= root_url%>images/wallpost_image.jpg',
			actions: [
				{ name: 'truthpage.me', link: 'http://truthpage.me' }
					],
				user_message_prompt: 'Share a truth status'
				},
			function(response) {
				if (response && response.post_id) {
				} else {
				}
				}
			);
		});
	});

function tweetpopup() {

window.open( "http://twitter.com/share?url=<%= root_url%><%= current_user.username %>&text=truth%20is?&count=none/", "tweet", "height=450,width=550,resizable=1" ) 
}
</script>

<div id="fb-root">
  <script src="http://connect.facebook.net/en_US/all.js"></script>
  <script>
      $(function sendRequestViaMultiFriendSelector(){
      $("a#invite_fb_friends").click(function(event) {
        FB.ui({
        method: 'apprequests',
        message: 'truth is? truthpage.me/<%= current_user.username %>'});
        event.preventDefault();
        return false;
      });
     });
  </script>
</div>

<table class="friends_container" cellspacing="0">
  <tr>
    <td class="friends-left">
			<div class="dash_column">
				<div class="friends_column_share">
					Your profile URL
				</div>
				<div class="share_profile_url">
					<span class="share_url_span">truthpage.me/</span><%= current_user.username %>
				</div>
				<div class="friends_column_h">
					Share your profile
				</div>
				
		    		<%= link_to "Share on Facebook", "#", :id => "share_profile", :class => 'facebook_share', :style=>'color:#FFFFFF;' %>
					
						<a href="http://twitter.com/share?url=url_you_wish_the_tweet_to_link_back_to&text=the%20text%20you%20wish%20the%20tweet%20to%20say&count=none/" class="custom-tweet-button" target="_blank" onClick="tweetpopup(); return false;" rel="nofollow" style="color:#FFFFFF;">Share on Twitter</a>

				<%# unless current_user.authentications.empty? %>
					<%# render 'shared/fb_truth_feed' %>
				<%# end %>
				<div class="fb_feed_friends">
					Friends on truthpage.me
				</div>
				<%= link_to '+ Invite Facebook Friends', '#' , :id => 'invite_fb_friends', :class => 'facebook_invite', :style=>'color:#FFFFFF;'  %> 
				<% unless current_user.authentications.empty? %>
					<% if @registered_friends.empty? %>
						<div class="fb_friends_noshow">
							None of your Facebook friends have a truthpage yet...
						</div>
					<% else %>
						<div class="fbfriends_box">
  						<% @registered_friends.each do |user| %>
  							<div class="fbfriend_block">
      						<%= link_to render_user_avatar(user, :thumb), user.username %>
      						<div class="fbfriend_username"><%= link_to user.username, user.username, :style=>"color:#56A8CE;" %></div>
  							</div>
  						<% end %>
						</div>
					<% end %>
				<% else %>
					<div class="fb_friends_noshow_fb">
				  	<%= render :partial=>"authentications/services" %>
				  </div>
				  <div class="fb_friends_noshow">
						Connect with Facebook to see your friends on truthpage.me!
					</div>
				<% end %>
			</div>
			</td>
			<td class ="dash_right_cell">
				<% if @change_feed_header %>
					<div class="dashfeed_title">
        		Truths about your Facebook friends
      		</div>
      	<% else %>
      		<div class="dashfeed_title">
        		Truths about friends you're following
      		</div>
      	<% end %>
			<div class="dashfeed_content">
				<%= render 'shared/feed' %>
			</div>
			</td>
    </td>
  </tr>
</table>