  <%= content_for :head do %>
  <script type="text/javascript">
    $(function(){
      $('#vertical-ticker').totemticker({
		    row_height  :   '55px',
        next        :   '#ticker-next',
        previous    :   '#ticker-previous',
        stop        :   '#stop',
		start       :   '#start',
		direction   :   'up',
		speed       :   1000,
		interval    :   5000
        });
    });
  </script>
<% end %>

