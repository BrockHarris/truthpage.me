<table>
  <thead>
     <tr>
      <th>id</th>
	  <th>email</th>
      <th>username</th>
      <th>admin</th>
      <th></th>
     <tr>
  </thead>
  <tbody>
    <% for user in @users %>
    <tr>
	  <td><%= user.id %><td>
      <td><%= user.email %></td>
      <td><%= link_to user.username, user %></td> 
      <td><%= user.admin.to_yn %></td>
      
    <tr>
    <% end %>
  </tbody>
<table>
